{
  "name": "qr-attendance-system",
  "version": "1.0.0",
  "description": "QR Attendance System - Full Stack",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend-vue && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend-vue && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend-vue && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "qr",
    "attendance",
    "vue",
    "nodejs",
    "mysql"
  ],
  "author": "",
  "license": "MIT"
} 